<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".KeyboardFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_margin">

        <TextView
            android:id="@+id/key1_text"
            style="@style/number_key_style"
            android:text="1"
            app:layout_constraintEnd_toStartOf="@id/key2_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/key2_text"
            style="@style/number_key_style"
            android:text="2"
            app:layout_constraintEnd_toStartOf="@id/key3_text"
            app:layout_constraintStart_toEndOf="@id/key1_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/key3_text"
            style="@style/number_key_style"
            android:text="3"
            app:layout_constraintEnd_toStartOf="@id/keyAC_text"
            app:layout_constraintStart_toEndOf="@id/key2_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/key4_text"
            style="@style/number_key_style"
            android:text="4"
            app:layout_constraintEnd_toStartOf="@id/key5_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/key1_text" />

        <TextView
            android:id="@+id/key5_text"
            style="@style/number_key_style"
            android:text="5"
            app:layout_constraintEnd_toStartOf="@id/key6_text"
            app:layout_constraintStart_toEndOf="@id/key4_text"
            app:layout_constraintTop_toBottomOf="@id/key2_text" />

        <TextView
            android:id="@+id/key6_text"
            style="@style/number_key_style"
            android:text="6"
            app:layout_constraintEnd_toStartOf="@+id/blank2_text"
            app:layout_constraintStart_toEndOf="@id/key5_text"
            app:layout_constraintTop_toBottomOf="@id/key3_text" />

        <TextView
            android:id="@+id/key7_text"
            style="@style/number_key_style"
            android:text="7"
            app:layout_constraintEnd_toStartOf="@id/key8_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/key4_text" />

        <TextView
            android:id="@+id/key8_text"
            style="@style/number_key_style"
            android:text="8"
            app:layout_constraintEnd_toStartOf="@id/key9_text"
            app:layout_constraintStart_toEndOf="@id/key7_text"
            app:layout_constraintTop_toBottomOf="@id/key5_text" />

        <TextView
            android:id="@+id/key9_text"
            style="@style/number_key_style"
            android:text="9"
            app:layout_constraintEnd_toStartOf="@id/keyDelete_text"
            app:layout_constraintStart_toEndOf="@id/key8_text"
            app:layout_constraintTop_toBottomOf="@id/key6_text" />

        <TextView
            android:id="@+id/key0_text"
            style="@style/number_key_style"
            android:text="0"
            app:layout_constraintEnd_toStartOf="@id/keyPoint_text"
            app:layout_constraintStart_toEndOf="@id/blank1_text"
            app:layout_constraintTop_toBottomOf="@id/key8_text" />

        <TextView
            android:id="@+id/keyPoint_text"
            style="@style/number_key_style"
            android:text="."
            app:layout_constraintEnd_toStartOf="@id/blank3_text"
            app:layout_constraintStart_toEndOf="@id/key0_text"
            app:layout_constraintTop_toBottomOf="@id/key9_text" />

        <TextView
            android:id="@+id/keyAC_text"
            style="@style/special_key_style"
            android:text="AC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/key3_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/keyDelete_text"
            style="@style/special_key_style"
            android:text="âŒ«"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/key9_text"
            app:layout_constraintTop_toBottomOf="@id/keyAC_text" />

        <TextView
            android:id="@+id/blank1_text"
            style="@style/number_key_style"
            android:visibility="invisible"
            android:text="A"
            app:layout_constraintEnd_toStartOf="@id/key0_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/key7_text" />

        <TextView
            android:id="@+id/blank2_text"
            style="@style/number_key_style"
            android:visibility="invisible"
            android:text="B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/key6_text"
            app:layout_constraintTop_toBottomOf="@id/key3_text" />

        <TextView
            android:id="@+id/blank3_text"
            style="@style/number_key_style"
            android:visibility="invisible"
            android:text="B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/keyPoint_text"
            app:layout_constraintTop_toBottomOf="@id/key9_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>